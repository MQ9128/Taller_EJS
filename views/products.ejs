<%- include('template/cabecera', {tituloWeb: 'Products' }) %>
<body style="background-color: #f5f5f5;">
    <div class="container">
        <figure class="text-center">
            <blockquote class="blockquote">
                <h1 style="color: #007bff;">Products</h1>
            </blockquote>
        </figure>
        <table class="table table-striped table-hover table-bordered shadow"> <!-- Agrega la clase 'shadow' -->
            <thead class="table-info">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Stock</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <%- renderedProducts %>
            </tbody>
        </table>
    </div>
</body>
</html>
